{
  "$schema": "http://json-schema.org/draft-04/schema",

  "type": "object",

  "properties": {
    "weekday": {
      "type": "string",
      "enum": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ]
    },
    "closed": { "type": "boolean" },
    "opening": { "type": ["string", "null"], "format": "partial-time" },
    "closing": { "type": ["string", "null"], "format": "partial-time" },
    "dayNumber": { "type": "integer", "minimum": 1, "maximum": 7 }
  },
  "required": ["weekday", "closed", "opening", "closing", "dayNumber"]
}
